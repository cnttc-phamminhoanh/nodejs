extends ../layouts/common.pug
block content
	h1 
		span.mr-3 Users
		a.btn.btn-primary(href='/users/create') Create new
	.d-flex.align-items-center
		form.ml-auto(action='/users/search', method='GET', class="d-flex")
			input(class="form-control",type='text',name='q',value=key)
			button(class="btn btn-danger ml-2") Search
	table.table
		tr
			th Avatar
			th Name
			th Phone
			th Actions

		each user in users 
			tr
				td
					img(src="http://localhost:3000/"+user.avatar,width="40",height="40",style="image-rendering: unset;object-fit: fill;")
					//- img(src="./images/logo-dep-nganh-ban-le-1.jpg",width="40",height="40",style="image-rendering: unset;object-fit: fill;")
				td(style="line-height:40px;")=user.name
				td(style="line-height:40px;")=user.phone
				td
					a.btn.btn-light(href='/users/'+user.id) View