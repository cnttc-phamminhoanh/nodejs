extends ../layouts/common.pug
block content
	h1 
		span.mr-3 Products		
	.d-flex.align-items-center
		form.ml-auto(action='/users/search', method='GET', class="d-flex")
			input(class="form-control",type='text',name='q',value=key)
			button(class="btn btn-primary ml-2") Search
			

	.d-flex.align-items-center.mt-5
		div(class="form-group row",style='margin: 0 auto;')
			each product in products 
				.col-sm-4 
					.card(style='width: 20rem;')
						img.card-img-top(src=product.image, alt='...')
						.card-body
							h5.card-title=product.name
							p.card-text=product.description
							a.btn.btn-primary(href='#') Add to cart
			

			
			